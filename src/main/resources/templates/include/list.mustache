<div class="container">
    {{>include/category}}
    <div class="row my-3">
        {{#writeList}}
            <div class="col-sm-4 my-4" onclick="location.href='/board/{{writeidx}}'">
                <div class="card">
                    <div class="card-body" style="cursor:pointer; width:100%; height:100%; white-space:nowrap; overflow:hidden;">
                        <div class="row">
                            <div class="col-sm-7">
                                <h6 class="card-subtitle mb-2">{{writerecruit}}</h6>
                            </div>
                            <div class="col-sm-5 justify-content-end">
                                <h6 class="card-subtitle mb-2">{{userid}}</h6>
                            </div>
                        </div>
                        <div class="row my-1" style="width:100%; white-space:nowrap; overflow:hidden;">
                            <div class="col-sm-12">
                                <h5 class="card-title">{{writetitle}}</h5>
                            </div>
                        </div>
                        <div class="my-2">
                            <div class="row">
                                <div class="col-sm-5">
                                    <h6 class="card-subtitle mb-2">{{writeonline}}</h6>
                                </div>
                                <div class="col-sm-7">
                                    <h6 class="card-subtitle">{{writeoffline}}</h6>
                                </div>
                            </div>
                        </div>
                        <div>
                            <div class="row">
                                <div class="col-sm-5">
                                    <h6 class="card-subtitle mb-2">{{writecall}}</h6>
                                </div>
                                <div class="col-sm-7">
                                    <h6 class="card-subtitle">{{writecallurl}}</h6>
                                </div>
                            </div>
                        </div>
                        <div class="my-2">
                            <div class="row">
                                <div class="col-sm-5">
                                    <h6 class="card-subtitle mb-2">{{writetype}}</h6>
                                </div>
                                <div class="col-sm-7">
                                    <h6 class="card-subtitle">{{writeuselang}}</h6>
                                </div>
                            </div>
                        </div>
                        <div>
                            <div class="row">
                                <div class="col-sm-5">
                                    <h6 class="card-subtitle mb-2">{{writecareer}}</h6>
                                </div>
                                <div class="col-sm-7">
                                    <h6 class="card-subtitle">{{writepeoplecnt}}</h6>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        {{/writeList}}
    </div>
</div><br><br>